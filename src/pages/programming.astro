---
import { getCollection } from 'astro:content';
import TagLayout from '../layouts/TagLayout.astro';

const programmingTags = ['python', 'django', 'java', 'spring batch', 'kafka', 'faust'];

const posts = (await getCollection('blog'))
  .filter((p) => p.data.tags.some((t) => programmingTags.includes(t)))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<TagLayout
  title="Programming"
  description="Posts about Python, Django, Java, and other programming topics."
  posts={posts}
/>
