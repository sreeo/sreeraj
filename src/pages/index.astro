---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import PostCard from '../components/PostCard.astro';
import { getThemeForTags } from '../utils/theme';

const posts = (await getCollection('blog'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const featuredPosts = posts.filter((p) => p.data.featured);
---

<BaseLayout title="sreeraj.dev â€” DevOps, Programming, and Treks" theme="tech">
  {featuredPosts.length > 0 && (
    <section class="mb-12">
      <h2 class="section-title text-2xl mb-6">Featured</h2>
      <div class="grid gap-6 sm:grid-cols-2">
        {featuredPosts.map((post) => (
          <PostCard
            title={post.data.title}
            slug={post.data.slug}
            description={post.data.description}
            pubDate={post.data.pubDate}
            featureImage={post.data.featureImage}
            tags={post.data.tags}
            readingTime={post.data.readingTime}
            variant={getThemeForTags(post.data.tags)}
          />
        ))}
      </div>
    </section>
  )}

  <section>
    <h2 class="section-title text-2xl mb-6">All Posts</h2>
    <div class="grid gap-6 sm:grid-cols-2">
      {posts.map((post) => (
        <PostCard
          title={post.data.title}
          slug={post.data.slug}
          description={post.data.description}
          pubDate={post.data.pubDate}
          featureImage={post.data.featureImage}
          tags={post.data.tags}
          readingTime={post.data.readingTime}
          variant={getThemeForTags(post.data.tags)}
        />
      ))}
    </div>
  </section>
</BaseLayout>
