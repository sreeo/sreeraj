---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="404 â€” Page Not Found" theme="tech">
  <div class="text-center py-20">
    <p class="font-mono text-accent text-sm mb-4">$ cat page.html</p>
    <h1 class="text-6xl font-bold text-tech-text-muted mb-4 font-mono">404</h1>
    <p class="text-xl text-tech-text-muted mb-2 font-mono">cat: page.html: No such file or directory</p>
    <p class="text-sm text-tech-text-muted mb-8 font-mono opacity-60">The page you're looking for has been moved or doesn't exist.</p>
    <a
      href="/"
      class="inline-block px-6 py-3 bg-accent text-tech-bg rounded-lg hover:opacity-90 transition-opacity font-mono text-sm"
    >
      cd ~
    </a>
  </div>
</BaseLayout>
