  <article class="max-w-[720px] mx-auto">
    <h1 class="page-title text-3xl mb-8">Contact</h1>
    {Content ? (
      <div class="prose">
        <Content />
      </div>
    ) : (
      <p class="page-description">Contact page content not found.</p>
    )}
  </article>
</BaseLayout>
