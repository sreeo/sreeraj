---
import { getCollection, render } from 'astro:content';
import PostLayout from '../layouts/PostLayout.astro';
import { getThemeForTags } from '../utils/theme';

export async function getStaticPaths() {
  const posts = (await getCollection('blog'))
    .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

  return posts.map((post, index) => ({
    params: { slug: post.data.slug },
    props: {
      post,
      prevPost: index < posts.length - 1
        ? { slug: posts[index + 1].data.slug, title: posts[index + 1].data.title }
        : null,
      nextPost: index > 0
        ? { slug: posts[index - 1].data.slug, title: posts[index - 1].data.title }
        : null,
    },
  }));
}

const { post, prevPost, nextPost } = Astro.props;
const { Content } = await render(post);
const theme = getThemeForTags(post.data.tags);
---

<PostLayout
  title={post.data.title}
  description={post.data.description}
  pubDate={post.data.pubDate}
  updatedDate={post.data.updatedDate}
  featureImage={post.data.featureImage}
  tags={post.data.tags}
  author={post.data.author}
  readingTime={post.data.readingTime}
  theme={theme}
  prevPost={prevPost}
  nextPost={nextPost}
>
  <Content />
</PostLayout>
