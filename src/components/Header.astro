---
interface Props {
  theme?: 'tech' | 'trek';
}

const { theme = 'tech' } = Astro.props;

const navItems = [
  { label: 'Home', href: '/' },
  { label: 'About', href: '/about/' },
  { label: 'DevOps', href: '/devops/' },
  { label: 'Treks', href: '/treks/' },
  { label: 'Programming', href: '/programming/' },
  { label: 'Postgres', href: '/postgres/' },
  { label: 'Resume', href: 'https://resume.sreeraj.dev', external: true },
];

const currentPath = Astro.url.pathname;
---

<header class="nav-bar sticky top-0 z-50">
  <nav class="max-w-4xl mx-auto px-4 py-4 flex items-center justify-between">
    <a href="/" class="nav-brand text-xl">
      sreeraj.dev
    </a>

    <button
      id="menu-toggle"
      class="md:hidden p-2 nav-link"
      aria-label="Toggle menu"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>

    <ul class="hidden md:flex items-center gap-6 text-sm font-medium">
      {navItems.map((item) => (
        <li>
          <a
            href={item.href}
            class:list={[
              'nav-link transition-colors',
              currentPath === item.href && 'active',
            ]}
            {...(item.external ? { target: '_blank', rel: 'noopener noreferrer' } : {})}
          >
            {item.label}
            {item.external && <span class="text-xs ml-0.5">&nearr;</span>}
          </a>
        </li>
      ))}
    </ul>
  </nav>

  <ul id="mobile-menu" class="hidden md:hidden px-4 pb-4 space-y-1">
    {navItems.map((item) => (
      <li>
        <a
          href={item.href}
          class:list={[
            'block py-2 text-sm font-medium nav-link transition-colors',
            currentPath === item.href && 'active',
          ]}
          {...(item.external ? { target: '_blank', rel: 'noopener noreferrer' } : {})}
        >
          {item.label}
          {item.external && <span class="text-xs ml-0.5">&nearr;</span>}
        </a>
      </li>
    ))}
  </ul>
</header>

<script>
  const toggle = document.getElementById('menu-toggle');
  const menu = document.getElementById('mobile-menu');
  toggle?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
